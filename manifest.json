{
  "manifest_version": 3,
  "name": "Tab-Specific Timer",
  "version": "1.0",
  "description": "Each tab has its own independent timer.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Timer"
  },
  "host_permissions": ["<all_urls>"]
}
